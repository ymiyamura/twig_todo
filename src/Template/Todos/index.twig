<nav class="large-3 medium-4 columns" id="actions-sidebar">
    <ul class="side-nav">
        <li class="heading">{{ __('Actions') }}</li>
        <li>{{ Html.link(__('New Todo'), {'action' : 'add'})|raw }}</li>
    </ul>
</nav>
<div class="todos index large-9 medium-8 columns content">
    <h3>{{ __('Todos') }}</h3>
    <table cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>{{ Paginator.sort('id')|raw }}</th>
                <th>{{ Paginator.sort('title')|raw }}</th>
                <th>{{ Paginator.sort('status')|raw }}</th>
                <th>{{ Paginator.sort('done')|raw }}</th>
                <th>{{ Paginator.sort('created')|raw }}</th>
                <th>{{ Paginator.sort('modified')|raw }}</th>
                <th class="actions">{{ __('Actions') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for todo in todos %}
            <tr>
                <td>{{ Number.format(todo.id) }}</td>
                <td>{{ todo.title|h }}</td>
                <td>{{ Number.format(todo.status) }}</td>
                <td>{{ todo.done|h }}</td>
                <td>{{ todo.created|h }}</td>
                <td>{{ todo.modified|h }}</td>
                <td class="actions">
                    {{ Html.link(__('View'), {'action' : 'view', 0 : todo.id})|raw }}
                    {{ Html.link(__('Edit'), {'action' : 'edit', 0 : todo.id})|raw }}
                    {{ Form.postLink(__('Delete'), {'action' : 'delete', 0 : todo.id}, {'confirm' : __('Are you sure you want to delete # {0}?', todo.id)})|raw }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="paginator">
        <ul class="pagination">
            {{ Paginator.prev('< ' ~ __('previous'))|raw }}
            {{ Paginator.numbers()|raw }}
            {{ Paginator.next(__('next') ~ ' >')|raw }}
        </ul>
        <p>{{ Paginator.counter()|raw }}</p>
    </div>
</div>